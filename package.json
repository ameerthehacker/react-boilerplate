{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A react scaffold with react, typescript, jest, prettier, tslint, scss, husky",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack.config.js",
    "test": "jest",
    "build": "cross-env NODE_ENV=development webpack --config build/webpack.config.js",
    "build:prod": "cross-env NODE_ENV=production webpack --config build/webpack.config.js",
    "coverage": "jest --coverage",
    "lint": "tslint **/**.ts? --fix",
    "pretty": "prettier --write",
    "precommit": "lint-staged",
    "prepush": "npm run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm test",
      "npm run pretty",
      "npm run lint",
      "git add"
    ],
    "*.{scss,json,md}": [
      "npm run pretty",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ameerthehacker/react-boilerplate.git"
  },
  "keywords": [
    "react",
    "webpack",
    "typescript",
    "boilerplate"
  ],
  "author": "ameerthehacker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ameerthehacker/react-boilerplate/issues"
  },
  "homepage": "https://github.com/ameerthehacker/react-boilerplate#readme",
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "autoprefixer": "^9.1.5",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "precss": "^3.1.2",
    "prettier": "^1.14.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.10.0",
    "ts-loader": "^5.1.1",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  }
}
